///////////////////////////////////////////////////////////
// putchar(char c)
///////////////////////////////////////////////////////////
#asm
_putchar:
    push    ix
    ld      ix,0
    add     ix,sp
    ld      a,(ix+4)
    call    $1D94
    ld      sp,ix
    pop     ix
    ret
#endasm

///////////////////////////////////////////////////////////
// puts
///////////////////////////////////////////////////////////
puts(char *s) {
    while (*s) {
        putchar(*s);
        s = s + 1;
    }
}

///////////////////////////////////////////////////////////
// main
///////////////////////////////////////////////////////////
main() {
    puts("Hello world!\r\n");
}
